@using WebShop_NULL.Models.ViewModels.СatalogModels
@model ProductsViewModel


    <div class="col-lg-9">
        
            @foreach (var p in Model.ProductList)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="product">
                        <div class="flip-container">
                            <div class="flipper">
                                <div class="front"><a href="detail.html"><img src="@Url.Content($"~/{p.Image.ImagePath}")" alt="" class="img-fluid"></a></div>
                                <div class="back"><a href="detail.html"><img src="@Url.Content($"~/{p.Image.ImagePath}")" alt="" class="img-fluid"></a></div>
                            </div>
                        </div><a href="detail.html" class="invisible"><img src="@Url.Content($"~/{p.Image.ImagePath}")" alt="" class="img-fluid"></a>
                        <div class="text">
                            <h3><a href="detail.html">@p.Name</a></h3>
                            <p class="price">
                                <del></del>@p.Price
                            </p>
                            <p class="buttons"><a href="detail.html" class="btn btn-outline-secondary">Подробнее</a><a href="basket.html" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>В корзину</a></p>
                        </div>
                        <!-- /.text-->
                    </div>
                    <!-- /.product            -->
                </div>
            }

            <!-- /.products-->
        </div>
        <div class="pages">
            <nav aria-label="Page navigation example" class="d-flex justify-content-center">
                <ul class="pagination">
                    <li class="page-item"><a href="#" aria-label="Previous" class="page-link"><span aria-hidden="true">«</span><span class="sr-only">Previous</span></a></li>
                    <li class="page-item"><a href="#" aria-label="Next" class="page-link"><span aria-hidden="true">»</span><span class="sr-only">Next</span></a></li>
                </ul>
            </nav>
        </div>

<!-- /.col-lg-9-->
