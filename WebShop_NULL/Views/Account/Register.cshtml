@model WebShop_NULL.Models.AuthtorizationModels.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}
<div id="all">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- breadcrumb-->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                            </li>
                            <li aria-current="page" class="breadcrumb-item active">Регистрация</li>
                        </ol>
                    </nav>
                </div>
                <div class="container d-flex justify-content-center">
                    <div class="col-lg-6">
                        <div class="box">
                            <h1>Новый аккаунт</h1>
                            <p class="lead">Всё ещё не являетесь нашим покупателм?</p>
                            <p>Вам нужно зарегистрироваться, чтобы получить дступ к дополнительным возможностям нашего сайта</p>
                            <form action="Register.cshtml" method="post">
                                <div class="form-group">
                                    <label for="name">Имя</label>
                                    <input id="name" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input id="email" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="password">Пароль</label>
                                    <input id="password" type="password" class="form-control">
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-user-md"></i> Зарегистрироваться</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
